{{!-- ./views/movies/movie-details.hbs --}}



	<h1>Película: {{movie.title}} </h1>
	<p>Género: {{movie.genre}}</p>
	<p>Guión: {{movie.plot}}</p>

	<ul>
	{{#each movie.cast}}

		<li>
			<p>{{ name }}</p>
		</li>

	{{/each}}
	</ul>

	<a href="/movies/{{movie._id}}/edit">Editar película</a>


	<form action="/movies/{{movie._id}}/delete" method="POST">
		<button type="submit">Borrar película</button>
	</form>